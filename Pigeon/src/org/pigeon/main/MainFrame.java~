package org.pigeon.main;


import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JMenu;
import javax.swing.JMenuItem;
import javax.swing.JMenuBar;
import javax.swing.JTextField;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.WindowConstants;


public class MainFrame extends JFrame{

	/**
	 * 
	 */
	
	//JComboBox mbtype;
	JTextField email,passwd,ims,oms;
	//JPanel centre;
	final JMenuBar mainMenuBar;	
	final JMenu fileMenu,editMenu;
	final JMenuItem preferencesEditMenu,newMessageFileMenu,quitFileMenu;

	private final class ItemAction implements ActionListener	
	{
		@Override
		public void actionPerformed(ActionEvent ae)
		{
			String getItem=ae.getActionCommand();
			if(getItem.equals("Quit"))
				System.exit(1);
			if(getItem.equals("New Message"))
			{
                 		ComposeMail mail = new ComposeMail();
             			mail.pack();
            			mail.setVisible(true);
                        }	

		}
	}
	
	
	private MainFrame()
	{
		super("Emails? Use Me!");
		mainMenuBar=new JMenuBar();
		fileMenu=new JMenu("File");
		editMenu=new JMenu("Edit");
		newMessageFileMenu=new JMenuItem("New Message");
		quitFileMenu=new JMenuItem("Quit");
		preferencesEditMenu=new JMenuItem("Preferences");
		mainMenuBar.add(fileMenu);
		mainMenuBar.add(editMenu);
		fileMenu.add(newMessageFileMenu);
		fileMenu.add(quitFileMenu);
		editMenu.add(preferencesEditMenu);
		setJMenuBar(mainMenuBar);
		newMessageFileMenu.addActionListener(new ItemAction());
		quitFileMenu.addActionListener(new ItemAction());
		preferencesEditMenu.addActionListener(new ItemAction());
		setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
	}
	public static void main(String[] args) {
		
		MainFrame mainframe=new MainFrame();
		
		mainframe.setSize(400,300);
		mainframe.setLocation(100,100);
		//mainframe.pack();
		mainframe.setVisible(true);

	}

}
